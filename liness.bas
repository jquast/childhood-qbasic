SCREEN 13
X = 5
Y = 3
X.SLOPE = (320 / 300)
Y.SLOPE = (200 / 300)
COLOUR = 1
DO
COLOUR = COLOUR + 1
IF COLOUR = 256 THEN COLOUR = 1
LINE (X, 0)-(X, 201), COLOUR
LINE (0, Y)-(321, Y), COLOUR
FOR SLOW = 1 TO 1000
NEXT SLOW
'LINE (X, 0)-(X, 201), 0
'LINE (0, Y)-(321, Y), 0

IF X <= 160 THEN X.SLOPE = X.SLOPE + (320 / 300)
IF X >= 160 THEN X.SLOPE = X.SLOPE - (320 / 300)
IF Y <= 100 THEN Y.SLOPE = Y.SLOPE + (200 / 300)
IF Y >= 100 THEN Y.SLOPE = Y.SLOPE - (200 / 300)
X = X + X.SLOPE
Y = Y + Y.SLOPE
LOOP





